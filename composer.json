{
    "name": "mastermoltra/pokeapi",
    "description": "My Pokeapi implementation with PHP and NodeJS",
    "type": "project",
    "support": {
        "docs": "https://pokeapi.co/docs/v2"
    },
    "require": {
        "symfony/http-foundation": "^5.1"
    },
    "require-dev": {
        "codeception/codeception": "^4.1",
        "phpstan/phpstan": "^0.12.29",
        "squizlabs/php_codesniffer": "^3.5",
        "codeception/module-phpbrowser": "^1.0.0",
        "codeception/module-asserts": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "server/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "server/tests/"
        }
    },
    "scripts": {
        "tests": [
            "@phpstan",
            "@phpcs",
            "@phpcs-test",
            "@codecept"
        ],
        "codecept": "codecept run --steps",
        "phpcs": "phpcs --standard=PSR12 --extensions=php server/src public",
        "phpcs-test": "phpcs --standard=PSR12 --ignore=server/tests/_support/* --extensions=php --exclude=PSR2.Methods.MethodDeclaration server/tests",
        "phpstan": "phpstan analyse -c phpstan.neon",
        "phpfixer": "php-cs-fixer fix --config=.php_cs.dist -v"
    },
    "license": "MIT"
}